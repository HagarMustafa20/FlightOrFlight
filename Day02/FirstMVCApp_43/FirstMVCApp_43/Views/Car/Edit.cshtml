@using FirstMVCApp_43.Models;
@{
    ViewBag.Title = "Edit";

    Car editedCar = ViewBag.selectedCar;
}

<h2 style="color:gray">Edit Car Info</h2>

<form action="/Car/Edit" method="post">
    <input type="text" name="num" value="@editedCar.Num" />
    <input type="text" name="color" value="@editedCar.Color" />
    <input type="text" name="model" value="@editedCar.Model" />
    <input type="text" name="manfacture" value="@editedCar.Manfacture" />
    <input style="background-color:forestgreen" type="submit" value="Save" />
</form>